{% extends 'basetemplates/layout-with-nav.jinja2' %}

{% block PageContent %}
<div class="ui container">
    <h1 class="ui center aligned header">Welcome to Pet House</h1>

    <div class="ui centered grid">
        <div class="sixteen wide mobile eight wide computer column">
            <registration-form><div class="ui active centered inline loader"></div></registration-form>
        </div>

        <div class="sixteen wide mobile eight wide computer column">
            <h3 class="ui center aligned header">Login</h3>
            <form class="ui form" method="post" action="{{ request.route_url('login') }}">
                {% if error %}
                <div class="ui visible error message">
                    <p>{{vstatus.msg_stack}}</p>
                </div>
                {% endif %}

                <div class="field">
                    <div class="ui labeled input">
                        <div class="ui blue label"><i class="user icon"></i> Username</div>
                        <input type="text" required name="username" placeholder="John">
                    </div>
                </div>
                <div class="field">
                    <div class="ui labeled input">
                        <div class="ui blue label"><i class="privacy icon"></i> Password</div>
                        <input type="password" required name="password">
                    </div>
                </div>
                <div class="ui centered grid field">
                    <button type="submit" class="ui facebook button" name="login.submitted"><i class="sign in icon"></i> Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    System.import("registrationapp").catch(function(err){ console.error(err); });
</script>
{% endblock %}