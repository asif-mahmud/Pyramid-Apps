{% extends '../../../templates/layouts/layout-with-nav.jinja2' %}

{% block PageContent %}
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <form role="form" action="{{ request.route_url('upload_photos', id=request.matchdict['id']) }}" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="files">Select files</label>
                    <input type="file" multiple id="files" name="files" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" name="form.submitted" class="btn btn-info center-block">Upload</button>
                </div>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
{% endblock %}