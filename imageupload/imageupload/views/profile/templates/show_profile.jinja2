{% extends '../../../templates/layouts/layout-with-nav.jinja2' %}

{% block PageContent %}
    {% if user %}
        {% if user.profile_picture %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-2">
            <img src="{{ request.static_url(user.profile_picture.get_url()) }}" alt="Could not find image" class="img-responsive img-thumbnail">
        </div>
        <div class="col-md-4">
            <h4 class="text-center">{{ user.name|e }}</h4>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
        {% else %}
<button class="btn btn-info">
    <a href="{{ request.route_url('add_profile_picture') }}">Add a Profile Picture</a>
</button>
        {% endif %}
    {% endif %}
{% endblock %}