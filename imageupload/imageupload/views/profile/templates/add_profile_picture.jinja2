{% extends '../../../templates/layouts/layout-with-nav.jinja2' %}

{% block PageContent %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form role="form" action="{{ request.route_url('add_profile_picture') }}" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="upload">Select a file</label>
                    <input type="file" name="file" id="upload" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" name="form.submitted" class="center-block btn btn-info">Upload</button>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}